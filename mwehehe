  <!-- MAIN SCENE -->
  <div class="scene-container" id="sceneContainer">
    <h1 class="title">ðŸŽ‰ happyy birthhdayy!! ðŸŽ‰</h1>
    <div class="scene">
      <div class="cake">
        <div class="candle"><div class="flame"></div></div>
        <div class="candle"><div class="flame"></div></div>
        <div class="candle"><div class="flame"></div></div>
      </div>

      <div class="letter" id="letter">
        <div class="flap"></div>
        <div class="content">
          <p>Happy birthday, Chay. I miss you!! ðŸ©·</p>
          <div class="from-line">From: ðŸ¦– </div>
        </div>
      </div>
