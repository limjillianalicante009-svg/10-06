  <script>
    const intro = document.getElementById("intro");
    const sceneContainer = document.getElementById("sceneContainer");
    const hiBtn = document.getElementById("hiBtn");
    const letter = document.getElementById("letter");

    // click "Hi" to show surprise
    hiBtn.addEventListener("click", () => {
      intro.style.opacity = "0";
      setTimeout(() => {
        intro.style.display = "none";
        sceneContainer.style.display = "flex";
        setTimeout(() => {
          sceneContainer.style.opacity = "1";
        }, 50);
      }, 1000);
    });

    // open letter
    letter.addEventListener("click", () => {
      letter.classList.toggle("open");
    });

    // confetti (lots of them!)
    const colors = [0, 40, 80, 120, 160, 200, 260, 300];
    function createConfetti() {
      for (let i = 0; i < 8; i++) { // more confetti per batch
        const confetti = document.createElement("div");
        confetti.classList.add("confetti");
        confetti.style.setProperty("--hue", colors[Math.floor(Math.random() * colors.length)]);
        confetti.style.left = Math.random() * 100 + "vw";
        confetti.style.animationDuration = (7 + Math.random() * 5) + "s";
        confetti.style.animationDelay = Math.random() * 2 + "s";
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 12000);
      }
    }
    setInterval(createConfetti, 300);
  </script>
</body>
